generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Temporary model to enable client generation when no real DB URL is provided.
// Replace or remove after introspecting or defining your actual models.
model Example {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    name      String?
}

